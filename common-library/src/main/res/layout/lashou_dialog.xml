<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical|center_horizontal"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10dip" >

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" 
            android:text="Title"
            android:textColor="@color/black"
            android:textSize="@dimen/api_font_size_dialog" />
    </RelativeLayout>

    <TextView
        android:id="@+id/dialog_content"
        android:layout_width="260dip"
        android:layout_height="wrap_content" 
        android:layout_margin="20dip"
        android:text="This is a custom dialog"
        android:textColor="#000000"
        android:textSize="@dimen/api_font_size_dialog" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom|center_horizontal"
        android:paddingBottom="10dip"
        android:paddingTop="10dip" >

        <Button
            android:id="@+id/dialog_btn_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="5dip"
            android:background="@drawable/dialog_btn_selector"
            android:text="知道了"
            android:textColor="@drawable/dialog_btn_text_selector"
            android:textSize="@dimen/api_font_size_dialog" />
    </RelativeLayout>

</LinearLayout>