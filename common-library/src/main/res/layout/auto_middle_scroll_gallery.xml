<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/white" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <com.common.api.widget.banner.AutoScrollGallery
            android:id="@+id/home_advs_gallery"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fadingEdge="none"
            android:gravity="center"
            android:soundEffectsEnabled="false"
            android:visibility="visible" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:gravity="right"
            android:orientation="horizontal" >
			<ImageView 
			android:id="@+id/iv_adv_des_bg"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="#171a1f" 
            android:scaleType="fitXY"/>
			<TextView 
			android:id="@+id/tv_movie_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="8dip"
            android:textColor="@color/white" />
        <com.tuanche.api.widget.indicator.LaShouRedIndicatorcator
                android:id="@+id/home_advs_gallery_mark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dip"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:orientation="horizontal" />
        </RelativeLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/deleteBanner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|right"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:clickable="true"
        android:padding="10dp"
        android:visibility="invisible"
        android:src="@drawable/delete_banner" />

</RelativeLayout>