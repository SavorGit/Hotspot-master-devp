<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_text_list_item">
    <RelativeLayout
        android:id="@+id/ic_la"
        android:layout_alignParentLeft="true"
        android:layout_width="115dp"
        android:layout_height="80dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="15dp">

        <ImageView
            android:layout_centerInParent="true"
            android:id="@+id/content_small_img"
            android:scaleType="fitXY"
            android:src="@drawable/kong_mrjz"
            android:layout_width="115dp"
            android:layout_height="80dp" />
        <TextView
            android:id="@+id/length"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="1dp"
            android:text="05'29"
            android:background="@drawable/list_text_bg"
            android:shadowColor="@color/title_text_color"
            android:shadowDx ="0.5"
            android:shadowDy ="1"
            android:shadowRadius ="3"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp"/>

    </RelativeLayout>


    <LinearLayout
        android:layout_toRightOf="@id/ic_la"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">
        <TextView
            android:id="@+id/content_small_title"
            android:text="美元对多数主要货币汇"
            android:textSize="16sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:gravity="center|left"
            android:textColor="@color/color_text_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/ic_la"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="65dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/content_small_source"
            android:text="创业板"
            android:textSize="12sp"
            android:gravity="center|left"
            android:textColor="#8a8886"
            android:layout_marginRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/content_small_time"
            android:text="2017-5-28"
            android:textSize="11sp"
            android:gravity="center|left"
            android:textColor="@color/color_text_info_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>