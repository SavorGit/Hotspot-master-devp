<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ece6de">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="6dp"
        android:background="@color/color_text_list_item"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/header_big_img"
                android:src="@drawable/beidishipinbg"
                android:scaleType="fitXY"
                android:layout_margin="11px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"/>
            <ImageView
                android:layout_margin="6px"
                android:src="@drawable/toutiao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="8dp"
                android:layout_marginBottom="4dp"
                android:layout_alignParentBottom="true">
                <TextView
                    android:id="@+id/length"
                    android:layout_width="30dp"
                    android:layout_height="16dp"
                    android:visibility="visible"
                    android:gravity="center|center_vertical"
                    android:text="05'29"
                    android:background="@drawable/type_corner_bg"
                    android:textColor="@color/color_text_list_item"
                    android:textSize="11sp"
                    android:layout_centerInParent="true"
                    />


            </RelativeLayout>


        </RelativeLayout>

        <TextView
            android:id="@+id/header_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:paddingTop="10sp"
            android:paddingBottom="6sp"
            android:paddingLeft="12sp"
            android:paddingRight="12sp"
            android:singleLine="true"
            android:text="asdasdasdddddddddddddddddddddddddddd"
            android:textColor="@color/color_text_black"
            android:textSize="16sp" />


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5sp"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:padding="0.5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12sp"
                app:cardBackgroundColor="#ece6de"
                app:cardElevation="0dp"
                app:cardUseCompatPadding="false"
                app:cardCornerRadius="10sp">
                <ImageView
                    android:id="@+id/hesder_source_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/yishoucang3x" />
            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/hesder_source_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:paddingLeft="6dp"
                android:paddingRight="10dp"
                android:text="美国CNN"
                android:textColor="#898886"
                android:textSize="11dp" />

            <TextView
                android:id="@+id/hesder_source_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="2017-5-18"
                android:textColor="#b2afa5"
                android:textSize="10dp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>