<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_eee8e0">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@color/color_eee8e0">
        <ImageView
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:id="@+id/content_small_img"
            android:src="@drawable/kong_mrjz"
            android:scaleType="fitXY"
            android:layout_gravity="center_vertical"
            android:layout_width="130sp"
            android:layout_height="84sp" />

        <RelativeLayout
            android:paddingTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="84sp"
            >
            <TextView
                android:id="@+id/content_small_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:paddingRight="10dp"
                android:text="美元对多数主要货币汇率20日上涨"
                android:textColor="@color/color_text_black"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10sp"
                android:orientation="horizontal">

                <TextView
                    android:layout_marginRight="10dp"
                    android:id="@+id/content_small_source"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="创业板"
                    android:textSize="11sp" />

                <TextView
                    android:textColor="#b2afab"
                    android:id="@+id/content_small_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2017-5-28"
                    android:textSize="10sp" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <include
        android:layout_width="match_parent"
        android:layout_height="20dp"
        layout="@layout/layout_divider_line"
        />
</LinearLayout>