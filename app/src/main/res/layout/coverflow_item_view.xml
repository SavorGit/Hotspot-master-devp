<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    app:cardBackgroundColor="#f6f2ed"
    android:orientation="vertical">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/rl_pic_layout"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            >

            <ImageView
                android:adjustViewBounds="true"
                android:id="@+id/iv_channelImg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btn_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12.5dp"
                    android:src="@drawable/ico_phone"
                    android:clickable="false"
                    android:gravity="center"
                     />

                <ImageView
                    android:id="@+id/btn_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12.5dp"
                    android:src="@drawable/ico_tv"
                    android:clickable="false"
                    android:gravity="center"
                     />
            </LinearLayout>

            <TextView
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:id="@+id/tv_len"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_margin="5dp"
                android:text="5'53"
                android:background="@drawable/round_corner_time"
                android:textColor="@color/color_text_list_item"
                android:textSize="11sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_page_num"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:paddingTop="10dp"
                android:id="@+id/ll_desc"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_title"
                    android:textSize="16sp"
                    android:textColor="@color/color_text_black"
                    android:textStyle="bold"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:text="李斯特全手工打造"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_marginTop="-10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginRight="10dp"
                        android:id="@+id/tv_source"
                        android:textSize="10sp"
                        android:textColor="@color/color_text_gray"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:text="美国CNN"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_weight="1"
                        android:id="@+id/tv_date"
                        android:textSize="10sp"
                        android:textColor="@color/color_text_gray"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:text="2017-07-07"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <RelativeLayout
                        android:gravity="center"
                        android:layout_marginRight="-8dp"
                        android:layout_gravity="right"
                        android:id="@+id/page_num_layout"
                        android:visibility="visible"
                        android:layout_width="45dp"
                        android:layout_height="27dp">

                        <TextView
                            android:id="@+id/bottomPageNumber"
                            android:text="6"
                            android:textSize="14sp"
                            android:textColor="@color/color_main"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="25dp"
                            android:layout_marginBottom="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <ImageView
                            android:layout_marginTop="2dp"
                            android:id="@+id/view_line"
                            android:layout_width="41dp"
                            android:layout_height="20sp"
                            android:layout_centerHorizontal="true"
                            android:layout_alignParentBottom="true"
                            android:scaleType="fitXY"
                            android:src="@drawable/slash_view"/>
                        <TextView
                            android:layout_marginBottom="-5dp"
                            android:id="@+id/pageNumberTotal"
                            android:text="28"
                            android:textSize="11sp"
                            android:textScaleX="1.2"
                            android:textColor="@color/color_text_gray"
                            android:layout_width="wrap_content"
                            android:layout_height= "wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="22dp"
                            android:layout_alignParentLeft="true" />
                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>
        </LinearLayout>

    
</android.support.v7.widget.CardView>