<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="96sp"
    android:orientation="horizontal"
    android:background="@color/color_text_list_item">
    <FrameLayout
        android:layout_width="130sp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="6sp"
        android:layout_marginBottom="6dp">
        <ImageView
            android:id="@+id/recommend_img"
            android:src="@drawable/app_icon"
            android:scaleType="fitXY"
            android:layout_width="130dp"
            android:layout_height="84dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:id="@+id/recommend_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/round_corner_translucent2"
            android:text="创业板"
            android:gravity="center"
            android:padding="2sp"
            android:textColor="@color/color_text_list_item"
            android:textSize="11sp" />

    </FrameLayout>
    <RelativeLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent">
        <TextView
            android:id="@+id/recommend_title"
            android:text="美元对多数主要货币汇率20日上涨"
            android:textSize="16sp"
            android:textColor="@color/color_text_black"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/recommend_source"
                android:text="创业邦"
                android:textSize="12dp"
                android:textColor="@color/color_888686"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/recommend_time"
                android:text="2017-5-18"
                android:textSize="11dp"
                android:textColor="@color/color_text_info_date"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>