<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="120dp"
    android:layout_height="120dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_pic"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/kong_mrjz"/>
    <CheckBox
        android:visibility="invisible"
        android:layout_margin="10dp"
        android:id="@+id/cb_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:background="@null"
        android:button="@drawable/gridview_checkbox_selector"
        android:clickable="false"
        android:focusable="false" />
    <TextView
        android:id="@+id/tv_time"
        android:visibility="visible"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:textColor="#888686"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:textSize="11sp"
        android:paddingBottom="5dp"
        android:background="@drawable/round_corner_time"
        android:text="5'43''"
        android:layout_alignRight="@id/iv_pic"
        android:layout_alignBottom="@id/iv_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>