<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.common.api.widget.pulltorefresh.library.PullToRefreshScrollView
        xmlns:ptr="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/pts_special_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fastScrollEnabled="false"
        android:scrollbars="none"
        ptr:ptrAnimationStyle="scale"
        ptr:ptrDrawableStart="@drawable/progress_loading_small">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_text_list_item"
            android:orientation="vertical"
            android:paddingBottom="30dp">

            <ImageView
                android:id="@+id/iv_special_pic"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/kong_mrjz" />

            <TextView
                android:id="@+id/tv_special_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="20dp"
                android:textColor="@color/color_text_black"
                android:textSize="22sp"
                tools:text="神仙打架：安邦 PK 财新 谁能笑到最后" />

            <TextView
                android:id="@+id/tv_special_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="5dp"
                android:paddingBottom="25dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="20dp"
                android:textColor="@color/color_575757"
                android:textSize="15sp"
                tools:text="朋友圈大家都在猜，财新的报道是不是意味着安邦要接受调查了？这场国内最权威财经媒体与总资产19710亿的全球化保险公司的较量，简直如神仙打架一般热闹，请火速围观。" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rlv_special_item"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="25dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp" />

            <TextView
                android:id="@+id/tv_look_special_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="25dp"
                android:background="@drawable/bg_special_history"
                android:text="查看历史专题"
                android:textColor="@color/color_main"
                android:textSize="15sp" />
        </LinearLayout>

    </com.common.api.widget.pulltorefresh.library.PullToRefreshScrollView>
    <com.savor.savorphone.widget.ProgressBarView
        android:id="@+id/pbv_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_refresh_data_hint"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-37dp"
        android:background="@color/color_text_refresh_list_hint"
        android:gravity="center"
        android:text="本次更新29条内容"
        android:textColor="#9a6f45"
        android:textSize="15sp"
         />
</FrameLayout>